{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "screens/*": [
        "src/screens/*"
      ],
      "elements/*": [
        "src/elements/*"
      ],
      "configs/*": [
        "src/configs/*"
      ],
      "navigation/*": [
        "src/navigation/*"
      ],
      "hooks/*": [
        "src/hooks/*"
      ],
      "svg/*": [
        "src/svg/*"
      ],
      "images/*": [
        "src/assets/images/*"
      ],
      "configs": [
        "src/configs/index"
      ],
      "middlewares/*": [
        "src/middlewares/*"
      ],
      "res/*": [
        "src/res/*"
      ],
      "lib/*": [
        "src/lib/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
